# Environment Configuration
COGITATIO_ENV=development                # Options: development|production (controls console logging)

# API Configuration
VOYAGE_MODEL=voyage-3
VOYAGE_API_KEY=your_key_here

# Data Paths
DATA_DIR=./data                          # Default: ./data
DOCUMENTS_DIR=./documents                # Default: ./documents

# Logging Configuration
COGITATIO_LOG_PATH=./logs               # Default: ./logs
COGITATIO_LOG_ROTATION_SIZE=10485760    # Default: 10MB in bytes
COGITATIO_LOG_BACKUP_COUNT=5            # Default: 5 files

# Server Configuration
HOST=127.0.0.1                          # Default: 127.0.0.1
PORT=8000                               # Default: 8000
DEBUG=false                             # Default: false
WORKERS=1                               # Default: 1

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000    # Comma-separated list of allowed origins